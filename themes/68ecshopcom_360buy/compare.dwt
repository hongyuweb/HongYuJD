<script language="javascript">
function remove(id)
{
  if (document.getCookie("compareItems") != null)
  {
    var obj = $.parseJSON(document.getCookie("compareItems"));
    delete obj[id];
    var date = new Date();
    date.setTime(date.getTime() + 99999999);
    document.setCookie("compareItems", $.toJSON(obj));
  }
}

