    var target = document.getElementById("spe_radio"+goodsId);
    target.style.display="none";
    addToCart(goodsId);
    alert('添加购物车成功！');
}
function hiddenSpe(goodsId){
    $('.select_attr').hide();
    $('#mask').remove();
    var target = document.getElementById("spe_radio"+goodsId);
    target.style.display="none";
}
function userCollect(goodsId,userId){
