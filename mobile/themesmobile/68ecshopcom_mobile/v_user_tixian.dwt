<script type="text/javascript">
function sub_tixian(frm)
{
	var deposit_money 	= frm.elements['deposit_money'].value;
	var real_name 		= frm.elements['real_name'].value;
	var account_name	= frm.elements['account_name'].value;
	var bank_account 	= frm.elements['bank_account'].value;
	var phone 			= frm.elements['phone'].value;
	var remark			= frm.elements['remark'].value;
	if(deposit_money.length == 0)
	{
		alert('提现金额不能为空！');
		return false; 
	}
	if(real_name.length == 0)
	{
		alert('真实姓名不能为空！');
		return false; 
	}
	if(account_name.length == 0)
	{
		alert('开户行不能为空！');
		return false; 
	}
	if(bank_account.length == 0)
	{
		alert('银行帐号不能为空！');
		return false;
	}
	if(phone.length == 0)
	{
		alert('手机号不能为空！'); 
		return false;
	}
	else
	{
		if(phone.length != 11)
		{
			alert('手机号不是11位！');
			return false; 
		} 
		else
		{
			if(isNaN(phone))
			{
				alert('手机号不是纯数字！');
				return false; 
			} 
			else
			{
				 var reg0 = /^13\d{5,9}$/; 
				 var reg1 = /^15\d{5,9}$/; 
				 var reg2 = /^0\d{10,11}$/;
				 var reg3 = /^145\d{4,8}$/;
				 var reg4 = /^147\d{4,8}$/;
				 var reg5 = /^180\d{4,8}$/;
				 var reg6 = /^182\d{4,8}$/;
				 var reg7 = /^185\d{4,8}$/;
				 var reg8 = /^186\d{4,8}$/;
				 var reg9 = /^187\d{4,8}$/;
				 var reg10 = /^188\d{4,8}$/;
				 var reg11 = /^189\d{4,8}$/;
				 var reg12 = /^181\d{4,8}$/;
				 var my = false; 
				if(reg0.test(phone))
				{
					my=true;
				}
				if(reg1.test(phone))
				{
					my=true; 
				}
				if(reg2.test(phone))
				{
					my=true; 
				}
				if(reg3.test(phone))
				{
					my=true;
				}
				if(reg4.test(phone))
				{
					my=true;
				}
				if(reg5.test(phone))
				{
					my=true;
				}
				if(reg6.test(phone))
				{
					my=true;
				}
				if(reg7.test(phone))
				{
					my=true;
				}
				if(reg8.test(phone))
				{
					my=true;
				}
				if(reg9.test(phone))
				{
					my=true;
				}
				if(reg10.test(phone))
				{
					my=true;
				}
				if(reg11.test(phone))
				{
					my=true;
				}
				if(reg12.test(phone))
				{
					my=true;
				}
				if (!my)
				{
					alert('手机号格式不正确！');
					return false;
				} 
			}
		}
	}
	return true;
}
</script>
